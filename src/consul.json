{
  "auto_encrypt": {
    "tls": true
  },

  "ca_file": "/etc/consul/conf.d/certs/bundle.crt",

  "connect": {
    "enabled": true,
    "ca_provider": "consul"
  },

  "disable_host_node_id": true,
  "disable_remote_exec": true,
  "disable_update_check": true,
  "discard_update_check": true,

  "dns_config": {
    "allow_stale": true,
    "max_stale": "87600h",
    "node_ttl": "30s",
    "service_ttl": {
      "*": "30s"
    }
  },

  "enable_central_service_config": true,

  "enable_syslog": true,

  "leave_on_terminate": true,
  "log_level": "DEBUG",

  "ports": {
    "server": 8300,
    "serf_lan": 8301,
    "serf_wan": 8302,
    "http": 8500,
    "https": 8501,
    "grpc": 8502,
    "dns": 8600
  },

  "verify_incoming": false,
  "verify_outgoing": true,
  "verify_server_hostname": true
}
